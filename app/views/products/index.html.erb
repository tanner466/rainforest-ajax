<h1>Products</h1>
<% @products.each do |product| %>


  <p>
    <a href="/products/<%= product.id %>">Name: <%= product.name %></a>
  </p>
  <p>
    Description: <%= product.description %>
  </p>
  <p>
    Price: <%= product.formatted_price %>
  </p>
  <p>
    Category: <% if product.category %>
    <%= product.category.name %>
    <% else %>
    <%= "None" %>
    <% end %>
  </p>
<% end %>
